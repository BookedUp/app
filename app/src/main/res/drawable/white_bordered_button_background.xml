<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gold"/> <!-- Set the pressed color -->
            <stroke android:width="2dp" android:color="@android:color/white"/> <!-- Set the border color and width -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Set the default background color -->
            <stroke android:width="2dp" android:color="@color/gold"/> <!-- Set the border color and width -->
        </shape>
    </item>
</selector>