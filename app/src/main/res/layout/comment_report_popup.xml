<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/comment_backgorund">


    <TextView
        android:id="@+id/reportTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report a comment!"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        ></TextView>

    <EditText
        android:id="@+id/reasonsInput"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Enter report reasons..."
        android:textSize="18sp"
        android:layout_below="@id/reportTitleTxt"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        />

    <Button
        android:id="@+id/reportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textSize="18sp"
        android:layout_below="@id/reasonsInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp" />

</RelativeLayout>