<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".fragments.accommodations.AccommodationListFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/startDate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_calendar"
            app:tint="@color/dark_grey" />

        <TextView
            android:id="@+id/checkInText"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:hint="Start date"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/endDate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_calendar"
            app:tint="@color/dark_grey"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/checkOutText"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:hint="End date"
            android:textSize="14sp" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/statisticButton"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="3dp"
            app:backgroundTint="@android:color/white"
            app:borderWidth="0dp"
            app:elevation="5dp"
            app:fabCustomSize="35dp"
            app:fabSize="auto"
            app:srcCompat="@drawable/ic_statistic"
            app:tint="#9e8d5f" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fal_recyclerType"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="false"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="4"
        tools:listitem="@layout/row_type" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cards_myAccommodations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toBottomOf="@+id/fal_recyclerType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:itemCount="5"
        tools:listitem="@layout/card_my_accommodation"/>
</androidx.constraintlayout.widget.ConstraintLayout>